{
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"outDir": "./build",
		"rootDir": "./src",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"paths": {
      "*": ["./src/types/*"]
    },
		// "baseUrl": "./src",
		"resolveJsonModule": true
		// "paths": {
		//   "~/*": [
		//     "*"
		//   ]
		// }
	},
	// "include": ["src"],
	"exclude": ["node_modules", "**/node_modules/*", "__tests__", "tests"]
}
